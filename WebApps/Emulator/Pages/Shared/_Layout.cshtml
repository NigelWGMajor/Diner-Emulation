<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Emulator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Emulator.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.4.0-web/css/all.css" />
</head>
<body class="dark-mid">

    <header class="dark-edge">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            
            <a class="navbar-brand dark-edge" data-bs-toggle="tooltip" title="Welcome tp the emulator" asp-area="" asp-page="/Index"> <i class="space-mid fa-solid fa-mug-saucer"></i>Emulator</a>
            <button  class="pad-r navbar-brand space-low dark-mid" onclick="location='/';return false;" data-bs-toggle="tooltip" title="Return to home page">
                  <i class="space-low fa-solid fa-house"></i>Home
            </button>        
            <button class="pad-r navbar-brand space-low dark-mid" onclick="location='/';return false;"
                data-bs-toggle="tooltip" title="Start">
                  <i class="space-low fa-solid fa-star"></i>Start
            </button>
        </nav>
    </header>
    </div>
    <div class="dark-mid container">
        <main role="main" class="dark-mid pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="dark-edge border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Diner Emulator
       </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>